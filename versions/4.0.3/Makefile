# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  next_config = debug
  sodium_config = debug
  client_config = debug
  server_config = debug
endif
ifeq ($(config),release)
  next_config = release
  sodium_config = release
  client_config = release
  server_config = release
endif

PROJECTS := next sodium client server

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

next: sodium
ifneq (,$(next_config))
	@echo "==== Building next ($(next_config)) ===="
	@${MAKE} --no-print-directory -C . -f next.make config=$(next_config)
endif

sodium:
ifneq (,$(sodium_config))
	@echo "==== Building sodium ($(sodium_config)) ===="
	@${MAKE} --no-print-directory -C . -f sodium.make config=$(sodium_config)
endif

client: next sodium
ifneq (,$(client_config))
	@echo "==== Building client ($(client_config)) ===="
	@${MAKE} --no-print-directory -C . -f client.make config=$(client_config)
endif

server: next sodium
ifneq (,$(server_config))
	@echo "==== Building server ($(server_config)) ===="
	@${MAKE} --no-print-directory -C . -f server.make config=$(server_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f next.make clean
	@${MAKE} --no-print-directory -C . -f sodium.make clean
	@${MAKE} --no-print-directory -C . -f client.make clean
	@${MAKE} --no-print-directory -C . -f server.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   next"
	@echo "   sodium"
	@echo "   client"
	@echo "   server"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"